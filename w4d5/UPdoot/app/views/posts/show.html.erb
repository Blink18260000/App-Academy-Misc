<%= render 'shared/index_button' %><br/>
<h1><%= @sub.title %></h1>

<%= @sub.description %>

<%= button_to "Doot", new_sub_post_url(@sub), method: :get %>

<% @sub.posts.each do |post| %>
  <%= render 'post', post: post %>
<% end %>

<% if @sub.moderator_id == current_user.id %>
  <%= button_to "Edit #{@sub.title}", edit_sub_url(@sub), method: :get %>
<% end %>
