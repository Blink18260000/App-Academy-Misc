<% target_url = version == :new ? subs_url : sub_url(sub) %>
<% method = version == :new ? :POST : :PATCH %>
<% submit_text = version == :new ? "Create SubDoot" : "Confirm" %>

<form action="<%= target_url %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= auth_token %>

  <label for="sub[title]">Title:</label>
  <input type="text" name="sub[title]" value="<%= @sub.title %>"><br/>

  <label for="sub[description]">Description:</label>
  <textarea name="sub[description]"><%= sub.description %></textarea><br/>
  <input type="submit" value="<%= submit_text %>">
</form>
